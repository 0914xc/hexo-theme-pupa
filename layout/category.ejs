<div id="category" xmlns="http://www.w3.org/1999/html">
    <% let result = site.categories.findOne({name: page.category}) %>
    <blockquote><p>此分类下共计<%= result.posts.length %>篇文章</p></blockquote>
    <h3><%= page.category %></h3>
    <ul>
        <% result.posts.sort('-date').each(function(post) { %>
            <li><a href="<%- url_for(post.path) %>"><%= post.title %></a></li>
        <% }) %>
    </ul>
</div>

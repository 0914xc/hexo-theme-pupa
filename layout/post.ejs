<article id="post">
    <% if (page.title.length === 0) { page.title = page.path } %>
    <h1 class="title"><%= page.title %></h1>
    <div class="intro">
        <div class="time">
            <%- date(page.date, 'YYYY年MM月DD日') %>
        </div>
        <div class="categories">
            <% page.categories.forEach(function (category) { %>
                <a href="<%= category.path %>"><%= category.name %></a>
            <% }) %>
        </div>
        <div class="tags">
            <% page.tags.forEach(function (tag) { %>
                <a href="<%= tag.path %>"><%= tag.name %></a>
            <% }) %>
        </div>
    </div>
    <% page.photos.forEach(function (photo) { %>
        <img src="<%= photo %>" alt="">
    <% })%>
    <div class="content"><%- page.more %></div>
</article>
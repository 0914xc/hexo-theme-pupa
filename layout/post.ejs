<article class="post">
    <% if (page.title.length === 0) {
        page.title = "[文章没有标题]"
    } %>
    <h1 class="title"><%= page.title %></h1>
    <div class="meta">
        <time><%- date(page.date, 'YYYY-MM-DD') %></time>
        <% if (page.categories.length > 0) { %>
            <div class="category">
                <% page.categories.forEach(function (category) { %>
                    <span><%= category.name %></span>
                <% }) %>
            </div>
        <% } %>
    </div>
    <div id="anchor-content" class="content"><%- page.content %></div>
</article>
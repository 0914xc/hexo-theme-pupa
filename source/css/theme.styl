@charset "utf-8"

@import "base.css";
@import "normalize.css";
@import "highlight.css";
@import "post.css";

body {
    max-width: 720px;
    padding 20px;
    margin: 20px auto;
    font-family: Consolas, cursive, -apple-system, serif;
    font-size: 16px;
    line-height: 1.6;
    background-color: #fff;
}

@media (prefers-color-scheme: dark) {
    html {
        filter: invert(90%) hue-rotate(180deg);
    }

    img, video, svg, div[class*="language-"], .video-container {
        filter: invert(110%) hue-rotate(180deg);
    }
}








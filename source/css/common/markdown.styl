h1:before, h2:before, h3:before, h4:before, h5:before, h6:before
    display inline-block
    padding-right 8px
    content "#"
    color $theme-color

blockquote
    padding: 1px 20px
    margin: 22px 0
    color: white
    background-color: #292a2d
    border-left: 4px solid $theme-color

strong
    color $theme-color

ul li, ol li
    margin 16px 0
    line-height 1.6

img
    max-width 100%

.katex
    font-size 1rem
    text-indent 0
    text-rendering auto

table
    table-layout auto
    width 100%
    margin 22px 0
    line-height 1.6
    text-align left
    border-collapse collapse
    border-spacing 0
    border 1px solid #ececec

    td, th
        padding: 8px 6px
        border-bottom: 1px solid #ececec
        border-right: 1px solid #ececec

.video-container
    margin auto
    width 100%
    height 350px

.video-container > iframe
    width 100%
    height 100%
    object-fit fill
